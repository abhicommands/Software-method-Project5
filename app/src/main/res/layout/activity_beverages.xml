<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_beverage"
    tools:context=".controller.BeverageActivity"> <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerBeverageLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/header_background_beverage"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvBeverageHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/header_beverages"
            android:textColor="@color/text_color_beverage_header"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivBeverageIcon"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/content_desc_beverage_icon"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvBeverageHeader"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/beverages" /> </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvFlavorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/label_flavor"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerBeverageLayout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFlavorList"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/list_border_gold"
        android:contentDescription="@string/content_desc_flavor_list"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_beverage"
        app:layout_constraintStart_toStartOf="@id/tvFlavorLabel"
        app:layout_constraintTop_toBottomOf="@id/tvFlavorLabel" />
        <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_beverage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55" /> <TextView
        android:id="@+id/tvSizeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/label_size"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerSize"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical_beverage"
        app:layout_constraintTop_toTopOf="@id/rvFlavorList"
        app:layout_constraintVertical_bias="0.6" /> <Spinner
        android:id="@+id/spinnerSize"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:prompt="@string/size_prompt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvSizeLabel"
        app:layout_constraintTop_toBottomOf="@id/tvSizeLabel" />
        <TextView
        android:id="@+id/tvQuantityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/label_quantity_beverage"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tvSizeLabel"
        app:layout_constraintTop_toBottomOf="@id/spinnerSize" />

    <Spinner
        android:id="@+id/spinnerQuantity"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:prompt="@string/quantity_prompt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvQuantityLabel"
        app:layout_constraintTop_toBottomOf="@id/tvQuantityLabel" />
        <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footerBeverageLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/header_background_beverage"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btnMainMenuBeverage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvPriceLabelBeverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="@string/label_price_beverage"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPriceBeverage"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@android:color/white"
            android:gravity="center_vertical|end"
            android:paddingHorizontal="8dp"
            android:paddingVertical="6dp"
            android:text="@string/price_hint"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/tvPriceLabelBeverage"
            app:layout_constraintStart_toEndOf="@id/tvPriceLabelBeverage"
            app:layout_constraintTop_toTopOf="@id/tvPriceLabelBeverage" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddOrderBeverage"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:paddingHorizontal="16dp"
            android:text="@string/button_add_to_order_beverage"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:backgroundTint="@color/button_background_add_order_beverage"
            app:cornerRadius="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMainMenuBeverage"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/button_main_menu"
        android:textColor="@color/black"
        app:backgroundTint="@color/button_background_cart_main_menu"
        app:cornerRadius="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/border_color_grey" /> </androidx.constraintlayout.widget.ConstraintLayout>